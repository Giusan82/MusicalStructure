<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructure">

    <!-- For adding the read permission on sdcard -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/musicround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PlayerActivity"
            android:label="@string/label_playeractivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayListActivity"
            android:label="@string/label_playlistactivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FoldersActivity"
            android:label="@string/label_folderactivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShopActivity"
            android:label="@string/label_shopactivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CartActivity"
            android:label="@string/label_cartactivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>